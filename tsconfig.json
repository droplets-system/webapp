{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"target": "es2021",
		"useDefineForClassFields": false,
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"moduleResolution": "bundler",
		"paths": {
			"$lib": ["./src/lib"],
			"$lib/*": ["./src/lib/*"]
		}
	},
	"include": ["**/*.ts"]
}
